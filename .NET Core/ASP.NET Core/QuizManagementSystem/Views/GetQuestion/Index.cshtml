
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
/*        .navbar {
            background-color: rgba( 218, 247, 166, .5);
            box-shadow: 0px 0px 25px 0px rgb(70, 70, 70), 0px 0px 25px 0px rgb(70, 70, 70);
        }
*/

        .nav-link:hover {
            border-radius: 15px;
            box-shadow: 1px 1px 90px 2px red,-1px -1px 90px 2px red;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3afbe372ee.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&family=Roboto+Slab&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body style="background-color: rgb(1, 19, 38 );">
    <header>
        <div class="container-fluid bg-dark">
            <nav class="navbar navbar-expand-lg navbar-dark pt-2 hover-item" id="navbar">
                <div class="container-fluid">


                    <h1 style="text-shadow:2px 2px 9px black;"><b style="font-family: 'Dancing Script', cursive; color:white;">Quiz Portal</b></h1>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon" style=""></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav  mb-2 ms-auto">
                            <li class="nav-item mr-lg-4 mb-2">

                                <p class="text-warning m-2" style=" font-size:20px;">Hi @ViewBag.Name</p>
                            </li>

                            <li class="nav-item">

                                <button type="button" class=" nav-link btn  p-2 m-2" data-bs-toggle="modal" data-bs-target="#exampleModal1" style="color: red;  border: 2px solid red;">
                                    <i class="fas fa-sign-out-alt text-danger"></i>
                                    Logout
                                </button>
                                <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Do you really want to Logout?</h5>

                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <a class="btn btn-danger" asp-action="Logout" asp-controller="Home">Logout</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>

                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>


    <div class="container">
        <div class="row">
            <div class="col-md-6 my-5 mx-auto">
                <script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
                <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_1g2qhg7w.json" background="transparent" speed="1" style="width: 400px; height: 400px;" loop autoplay></lottie-player>
            </div>
            <div class="col-md-6 my-5 mx-auto">
                <h5 class="text-warning" style="font-family: 'Roboto Slab', serif; font-size:40px;"><b>Read the Instructions Carefully</b></h5>
                <p class="text-white" style="font-family: 'IM Fell English SC', serif; font-family: 'Roboto Slab', serif; font-size:20px;">
                    1) You have total of @ViewBag.Count questions<br />
                    2) Each question is of 1 mark ans time is of @ViewBag.Time seconds<br />
                    3) You can see the timer just in the top.<br />
                    4) Answer will be autosaved if you fail to click next or
                    submit but make sure you select any answer.
                </p>
            </div>
            <div class="col">
                <div class="d-grid gap-2 md-block ">
                    <a asp-action="ShowQuestion" class="btn btn-danger mb-2" type="button">Start Exam</a>

                </div>
            </div>
        </div>

    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
