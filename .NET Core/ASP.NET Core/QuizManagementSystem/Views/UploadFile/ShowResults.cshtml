@model IEnumerable<QuizManagementSystem.Models.Result>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowResults</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body style="background-color: rgb(1, 19, 38 ); ">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <a asp-action="ExcelDownload" class="btn btn-success">Export to Excel</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6  mx-auto mt-2" >
                <div class="table-responsive-sm" style="height:70%; overflow-y:scroll;">
                    <table class="table table-dark table-borderless">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.percentage)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                            }
                            @foreach (var item in Model)
                            {

                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.percentage)
                                    </td>
                                    <td>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    @if (Model.Count() == 0)
                    {
                        <p style="text-align:center; color:white;"><i>No record to show</i></p>
                    }
                </div>
            </div>
        </div>
    </div>
    

</body>
</html>
