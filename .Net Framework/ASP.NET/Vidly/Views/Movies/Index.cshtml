@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-4">
            @Html.ActionLink("Create New","Create",null,new { @class="btn btn-danger mb-2"})
        </div>
    </div>
    <div class="row">
        <h2>Movie</h2>
        <div class="col-6 m-auto">
            @if (Model.Count()==0)
            {
                <p>Nothing to Show</p>
            }
            else
            {
                <table class="table table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>Links</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit","Movies", new { id = item.Id }, new { @class = "btn btn-outline-danger me-2" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success me-2" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                            </td>
                        </tr>
                    }

                </table>
            }

        </div>
    </div>
</div>




