@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    var count = Model.Count();
}


    <div class="container mt-5">
        <div class="row">
            <div class="col-4">
                @Html.ActionLink("Create New","CreateCustomer","Customer",null,new { @class="btn btn-danger mb-2"})
            </div>
        </div>
        <div class="row">
            <h2>Customer</h2>
            <div class="col-6 m-auto">
                @if (count == 0 )
                {
                    <p>Nothing to Show</p>
                }
                else
                {
                    <table class="table table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>List</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-danger me-2" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success me-2" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                                </td>
                            </tr>
                        }

                    </table>
                }

            </div>
        </div>
    </div>
    


    
