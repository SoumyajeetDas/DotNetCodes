@model Vidly.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "CreateCustomer";

}


<div class="container mt-5" id="check" >
    <div class="row">
        <div class="col-6 m-auto">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Customer</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Customer.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Customer.Name, new { htmlAttributes = new { @class = "form-control", @onkeyup = "myfunction();" } })
                            @Html.ValidationMessageFor(model => model.Customer.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Customer.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Customer.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Customer.BirthDate, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <label>Membership Type</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select the Membership Type", new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
                                @Html.ValidationMessageFor(model => model.Customer.IsSubscribedToNewsletter, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success mt-2"  />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row mt-2">
        @Html.ActionLink("Back to List", "Index", "Customer", new { @class = "btn btn-info" })
        <p style="color:red;" id="text"></p>
    </div>
</div>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
    @*@Scripts.Render("~/bundles/customjs");*@
}


